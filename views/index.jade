extends layout
      
block content
   #gather-wrapper
      #gather
         .pane.form
            form(method='get', action="/analyze")
               fieldset 
                  label Twitter:
                     input(name="twitter_handle", type="text", placeholder="twitter handle")
                  button.button(type="submit") Get Started
         .pane.analyzing
            .loading
               .loading-icon
                  .circle
                  .circle1
               p Analyzing 
                  span.analyze-for
                  |&hellip;
      
      #start-over 
         a.button(href="#") Start Over

   #data.hide
      section.header
         .profile
            .details
               img.avatar(width=125)
               span.name
               span.location
               span.bio
            span.score
               span.value
               span.title
      .content
         section.influencers
            h3 Influenced By
         section.graphs
            .graph-wrapper
               .last90
            .topics-wrapper
               .topics
         section.tweets.positive
            .wrapper   
               h3 Positive Impact
               ul
         section.tweets.negative
            .wrapper
               h3 Negative Impact
               ul
         section.explorer-wrapper
            .explorer
      .clear