@import mixins
@import loading
html
   font-size 100%
   padding 20px
   background-color #ccc
h1 
   font-size 3em
   margin-bottom 1em
   color #444
   font-family lobster

#gather
   background-image url('/images/noisy.png')
   position relative
   width 500px
   height 120px
   margin 0 auto
   border-radius 5px
   box-shadow 0px 2px 6px #888
   overflow hidden

   .pane
      height 100px
      padding 10px
      margin-bottom 30px

      &.form.hide 
         -webkit-animation slideout 500ms cubic-bezier(.18,1.14,1,1.2) forwards
      
      &.analyzing
         text-align center
         line-height 100px
         color white
         .loading
            height 25px
            margin-top 25px

   label
      display block
      background-image url('/images/twitter-logo.svg')
      background-size 70px 70px
      background-repeat no-repeat
      background-position 0px 0px
      overflow hidden
      text-indent -999px

   input[type=text]
      margin-top 15px
      border 1px solid white
      font-size 2em
      border-radius 5px
      width 82%
      -webkit-transition border 500ms ease-out
      float right
      &:focus
         border 1px solid blue

   button
      float right
      clear both
      margin-top 10px
      font-size 1.5em
      border-radius 2px
      border none
      background none
      color white
      text-decoration underline
      -webkit-transition color 500ms ease-out
      &:hover
         color blue
#data
   display none
   margin 0 auto

   .header
      background-color white
      border-radius 5px
      height 80px
      
      .profile
         padding 20px
         float left

         img
            float left
            margin-top -43px
            margin-left -10px
            border 1px solid #444
            background-color white
            border-radius 5px
            box-shadow 0px 2px 6px #888
         h2
            float left
            margin-left 20px
            font-size 2.5em
      .score
         color white
         height 80px
         width 120px
         text-align center
         font-weight bold
         font-size 3.5em
         line-height 80px
         font-family arial
         text-shadow 0px 2px 6px #888
         float right
         background-image url('/images/noisy.png')
   .content
      clear both
      .graphs
         div
            height 150px
            background-color white
            margin-bottom 20px
      .tweets
         float left
         width 50%
            
         ul 
            background-color white
         li
            color #444
            margin-bottom 5px
            padding 10px
            border-radius 4px
            box-shadow 0px 2px 6px #eee
            background-color white

            &.negative
               background-color red

            &.positive
               background-color green

@-webkit-keyframes slideout
   0% {
      margin-top 0px
   }
   100% {
      margin-top -150px;
   }