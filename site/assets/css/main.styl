@import mixins
@import loading
html
   font-size 100%
   padding 20px
   background-color #ccc

body
   padding 20px
   font-family 'Molengo', serif

.container
   max-width 1000px
   margin 0 auto

h1 
   font-size 3em
   margin-bottom 1em
   color #444
   font-family lobster

#gather
   background-image url('/images/noisy.png')
   position relative
   width 500px
   height 120px
   margin 0 auto
   border-radius 5px
   box-shadow 0px 2px 6px #888
   overflow hidden

   .pane
      height 100px
      padding 10px
      margin-bottom 30px

      &.form.hide 
         -webkit-animation slideout 500ms cubic-bezier(.18,1.14,1,1.2) forwards
      
      &.analyzing
         text-align center
         line-height 100px
         color white
         .loading
            height 25px
            margin-top 25px

   label
      display block
      background-image url('/images/twitter-logo.svg')
      background-size 70px 70px
      background-repeat no-repeat
      background-position 0px 0px
      overflow hidden
      text-indent -999px

   input[type=text]
      margin-top 15px
      border 1px solid white
      font-size 2em
      border-radius 5px
      width 82%
      -webkit-transition border 500ms ease-out
      float right
      &:focus
         border 1px solid blue

   button
      float right
      clear both
      margin-top 10px
      font-size 1.5em
      border-radius 2px
      border none
      background none
      color white
      text-decoration underline
      -webkit-transition color 500ms ease-out
      &:hover
         color blue
#data
   display none
   margin 0 auto

   .header
      margin 0 auto
      overflow hidden
      padding 5px
      .profile
         position relative

         img.avatar
            border-radius 5px
            float left
            margin-right 15px

         .details
            float left
            padding-right 120px

            .name 
               font-size 2.5em
               display block
               
            .location
               font-size 1em
               display block
               margin-left 15px
            .bio
               color #666
               display block
               margin-top 5px
         
         .score
            padding 10px
            margin 5px
            border-radius 5px
            position absolute
            right 0px
            color white
            text-align center
            font-weight bold
            font-size 3.5em
            font-family arial
            text-shadow 0px 2px 6px #888
            background-image url('/images/noisy.png')
   .content
      margin-top 30px
      .graphs
         div
            height 150px
            background-color white
            margin 5px
            margin-bottom 20px
            border-radius 5px

      .tweets
         float left
         width 50%
         .wrapper
            background-color white
            padding 10px
            margin 5px
            border-radius 5px
            h3 
               font-size 1.4em
               border-bottom 1px solid #888
               padding 5px
               padding-bottom 10px
               margin-bottom 5px
         li
            color #444
            margin-bottom 5px
            padding 10px
            background-color white
            border-bottom 1px solid #eee

@-webkit-keyframes slideout
   0% {
      margin-top 0px
   }
   100% {
      margin-top -150px;
   }